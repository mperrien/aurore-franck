---
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="Mentions légales"
  description="Directrice de la publication et hébergeur."
>
  <main class="legal">
    <div class="container">
      <h1>Mentions légales</h1>
      <div class="legal__content">
        <section>
          <p>
            Directrice de la publication<br />
            <strong>Aurore Stevens</strong><br />
          </p>
          <p class="legal__contact">
            Contact: <a href="mailto:stevens-gardenbreche@gmail.com"
              >stevens-gardenbreche@gmail.com</a
            >
          </p>
        </section>
        <section>
          <p>
            Ce site est hébergé par<br />
            <strong>Netlify</strong><br />
          </p>
          <address>
            131 Albright Way<br />
            Los Gatos, CA 95032<br />
            États-Unis
          </address>
        </section>
        <section>
          <h2>Crédits</h2>
          <ul class="list-reset">
            <li>
              <a href="https://www.pascalhelleu.com/">
                Photographies : Pascal Helleu
              </a>
            </li>
            <li><a href="https://perrien.fr/">Site : Marc Perrien</a></li>
          </ul>
        </section>
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  .legal {
    h1 {
      margin-top: var(--space-large);
    }

    &__content {
      display: grid;
      gap: var(--space-large);
      margin-top: var(--space-large);

      font-size: 2rem;

      @media (width > 50rem) {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    &__contact {
      margin-top: var(--space-medium);
    }
  }
</style>
